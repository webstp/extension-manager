{
  "name": "extension-manager",
  "displayName": "Extension Manager",
  "description": "An extension to help manage other extensions",
  "license": "MIT",
  "version": "0.0.5",
  "publisher": "webstp",
  "repository": {
    "type": "github",
    "url": "https://github.com/webstp/extension-manager"
  },
  "bugs": {
    "url": "https://github.com/webstp/extension-manager/issues"  
  },
  "engines": {
    "vscode": "^1.1.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
     "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "webstp.extension-manager.installRequired",
        "title": "Extensions: Install Required Extensions",
        "description": "Install missing extensions from settings"
      }
    ],
    "configuration": {
      "title": "Extension Manager Configuration",
      "properties": {
        "extension-manager.extensions": {
          "type": "array",
          "default": [],
          "description": "List of extension you wish to install in the form of (publisher).(extensionName)."
        },
        "extension-manager.autoInstall": {
          "type": "boolean",
          "default": true,
          "description": "Set to 'true' if you want extensions to install automatically on startup, 'false' otherwise."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.30",
    "@types/rimraf": "^0.0.27",
    "@types/semver": "^5.3.28",
    "tslint": "^3.14.0",
    "typescript": "^2.0.0"
  },
  "dependencies": {
    "http-proxy-agent": "^1.0.0",
    "https-proxy-agent": "^1.0.0",
    "lodash": "^4.15.0",
    "rimraf": "^2.5.4",
    "semver": "^5.3.0",
    "vscode": "^0.11.0",
    "yauzl": "^2.6.0"
  }
}
